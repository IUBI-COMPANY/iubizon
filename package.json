  "license": "MIT",
  "scripts": {
    "api": "yarn --cwd apps/api",
    "web-panel": "yarn --cwd apps/web-panel",
    "web-client": "yarn --cwd apps/web-client",
    "install:all": "yarn api install && yarn web-panel install && yarn web-client install",
    "deploy": "firebase deploy",
    "deploy:simple": "firebase deploy --only api,hosting",
    "deploy:api": "yarn api deploy",
    "deploy:web-panel": "yarn web-panel deploy",
    "deploy:web-client": "yarn web-client deploy",
    "deploy:hosting-api": "yarn hosting-api deploy",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "deploy:extensions": "firebase deploy --only extensions",
    "export:extensions": "firebase ext:export"
  }
}
